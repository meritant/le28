<h2>Latest Messages:</h2>

<div class="container">
  <h2>Posts</h2>
  <table class="table">
    <thead>
    <tr>
      <th>Date Created</th>
      <th>Post</th>
    </tr>
    </thead>
    <tbody>
      <% @results.each do |post| %>
      <tr>
      <td><%= post['created_date'] %></td>
      <td><%= post['post'] %> <br /><br />
<!--        <button type="button" class="btn btn-info">Info</button>-->
        <a class="btn btn-info" href="/details/<%= post['id'] %>">Comment</a>
      </td>
      </tr>
        <% end %>
    <!-- Add more rows as needed -->
    </tbody>
  </table>
</div>